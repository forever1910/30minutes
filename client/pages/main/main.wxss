/* pages/main/main.wxss */

.type-select-header{
  margin-top: 40rpx;
}

.type-select {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.type-select-text {
    width: 100%;
    line-height: 52px;
    font-size: 34rpx;
    color: #007AFF;
    text-align: center;
}